<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8A817C"
    android:padding="12sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/item2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡布奇諾"
            android:textColor="#231F1C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plus2_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/plus_minus_btn"
            android:text="+"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/num2_1"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/plus2_1"
            android:gravity="center"
            android:text="0"
            android:textColor="#231F1C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/minus2_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/num2_1"
            android:background="@drawable/plus_minus_btn"
            android:text="–"
            android:textSize="22sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/minus2_1"
            android:text="......(160)   "
            android:textColor="#231F1C"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp" >

        <TextView
            android:id="@+id/item2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拿鐵咖啡"
            android:textColor="#231F1C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plus2_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/plus_minus_btn"
            android:text="+"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/num2_2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/plus2_2"
            android:gravity="center"
            android:text="0"
            android:textColor="#231F1C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/minus2_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/num2_2"
            android:background="@drawable/plus_minus_btn"
            android:text="–"
            android:textSize="22sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/minus2_2"
            android:text="......(150)   "
            android:textColor="#231F1C"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="招牌花式咖啡"
            android:textColor="#231F1C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plus2_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/plus_minus_btn"
            android:text="+"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/num2_3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/plus2_3"
            android:gravity="center"
            android:text="0"
            android:textColor="#231F1C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/minus2_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/num2_3"
            android:background="@drawable/plus_minus_btn"
            android:text="–"
            android:textSize="22sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/minus2_3"
            android:text="......(200)   "
            android:textColor="#231F1C"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>