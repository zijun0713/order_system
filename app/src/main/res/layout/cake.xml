<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8A817C"
    android:padding="12sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/item1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手工起司蛋糕"
            android:textColor="#231F1C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plus1_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/plus_minus_btn"
            android:text="+"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/num1_1"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/plus1_1"
            android:gravity="center"
            android:text="0"
            android:textColor="#231F1C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/minus1_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/num1_1"
            android:background="@drawable/plus_minus_btn"
            android:text="–"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/minus1_1"
            android:text="......(125)   "
            android:textColor="#231F1C"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp">

        <TextView
            android:id="@+id/item1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水果蛋糕"
            android:textColor="#231F1C"
            android:textSize="20sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/plus1_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/plus_minus_btn"
            android:text="+"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/num1_2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/plus1_2"
            android:gravity="center"
            android:text="0"
            android:textColor="#231F1C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/minus1_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/num1_2"
            android:background="@drawable/plus_minus_btn"
            android:text="–"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/minus1_2"
            android:text="......(200)   "
            android:textColor="#231F1C"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="布朗尼"
            android:textColor="#231F1C"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plus1_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/plus_minus_btn"
            android:text="+"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/num1_3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/plus1_3"
            android:gravity="center"
            android:text="0"
            android:textColor="#231F1C"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/minus1_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toStartOf="@id/num1_3"
            android:background="@drawable/plus_minus_btn"
            android:text="–"
            android:textSize="22sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/minus1_3"
            android:text="......(180)   "
            android:textColor="#231F1C"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>