<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 注意：有 state 的 item 要擺在前面 -->
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FF8000" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#FFD1A4" />
            <stroke
                android:width="4dp"
                android:color="#FF8000" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>

</selector>